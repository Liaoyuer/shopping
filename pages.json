				"text": "分类"
			},{
				"pagePath": "pages/cart/cart",
				"iconPath":"./static/images/tabBar/cart.png",
				"selectedIconPath":"static/images/tabBar/cart-default.png",
				"text": "购物车"
			},{
				"pagePath": "pages/me/me",
				"iconPath":"./static/images/tabBar/tab-user-black.png",
